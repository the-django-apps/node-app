<!DOCTYPE html>
<html>
  <head>
    <title>Login</title>
    <%- include('partials/heads_content') %>

    <!-- Footer CSS -->
    <link rel="stylesheet" type="text/css" href="/css/footer.css" />

    <style>
      .scroll {
        max-height: 440px;
        overflow: auto;
        text-align: justify;
      }
      .btn-outline-primary {
        color: #85aecc;
        border-color: #85aecc;
      }
      .btn-outline-primary:hover {
        color: #fff;
        background-color: #85aecc;
        border-color: #85aecc;
      }
      .list-group-item-action {
        color: #85aecc;
        border-color: #85aecc;
      }
      .list-group-item-action:hover {
        color: #fff;
        background-color: #85aecc;
        border-color: #85aecc;
      }
      .list-group-item.active {
        z-index: 2;
        color: #fff;
        background-color: #85aecc;
        border-color: #85aecc;
      }
      .btn-eventregister {
        background-color: #85aecc;
        color: #fff;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header') %>

    <div class="container-fluid my-2" style="min-height: 70vh;">
      <div class="row">
        <div class="col-sm-12 col-lg-4">
          <div class="list-group" id="list-tab" role="tablist">
            <a class="list-group-item list-group-item-action active" id="list-indoor-list" data-toggle="list" href="#list-indoor" role="tab" aria-controls="indoor">Indoor Games</a>
            <a class="list-group-item list-group-item-action" id="list-outdoor-list" data-toggle="list" href="#list-outdoor" role="tab" aria-controls="outdoor">Outdoor Games</a>
          </div>
        </div>
        <div class="col-sm-12 col-lg-8 scroll">
          <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade show active" id="list-indoor" role="tabpanel" aria-labelledby="list-indoor-list">
              <div class="accordion" id="accordionIndoor">
                <div class="card">
                  <div class="card-header" id="headingOneIndoor">
                    <h2 class="mb-0">
                      <button class="btn btn-block btn-outline-primary text-left" type="button" data-toggle="collapse" data-target="#collapseOneIndoor" aria-expanded="true" aria-controls="collapseOneIndoor">
                        Indoor Game 1
                      </button>
                    </h2>
                  </div>
              
                  <div id="collapseOneIndoor" class="collapse show" aria-labelledby="headingOneIndoor" data-parent="#accordionIndoor">
                    <div class="card-body">
                      Indoor game 1 description <br>
                      <a class="btn-eventregister btn" id="eventregisterOneIndoor" href="/registerevent/:id">Register Now</a>
                    </div>
                  </div>
                </div>
                <div class="card">
                  <div class="card-header" id="headingTwoIndoor">
                    <h2 class="mb-0">
                      <button class="btn btn-block btn-outline-primary text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwoIndoor" aria-expanded="false" aria-controls="collapseTwoIndoor">
                        Indoor Game 2
                      </button>
                    </h2>
                  </div>
                  <div id="collapseTwoIndoor" class="collapse" aria-labelledby="headingTwoIndoor" data-parent="#accordionIndoor">
                    <div class="card-body">
                      Indoor Game 2 description
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="tab-pane fade" id="list-outdoor" role="tabpanel" aria-labelledby="list-outdoor-list">
              <div class="accordion" id="accordionOutdoor">
                <div class="card">
                  <div class="card-header" id="headingOneOutdoor">
                    <h2 class="mb-0">
                      <button class="btn btn-block btn-outline-primary text-left" type="button" data-toggle="collapse" data-target="#collapseOneOutdoor" aria-expanded="true" aria-controls="collapseOneOutdoor">
                        Outdoor Game 1
                      </button>
                    </h2>
                  </div>
              
                  <div id="collapseOneOutdoor" class="collapse show" aria-labelledby="headingOneOutdoor" data-parent="#accordionOutdoor">
                    <div class="card-body">
                      Outdoor Game 1 description
                    </div>
                  </div>
                </div>
                <div class="card">
                  <div class="card-header" id="headingTwoOutdoor">
                    <h2 class="mb-0">
                      <button class="btn btn-block btn-outline-primary text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwoOutdoor" aria-expanded="false" aria-controls="collapseTwoOutdoor">
                        Outdoor game 2
                      </button>
                    </h2>
                  </div>
                  <div id="collapseTwoOutdoor" class="collapse" aria-labelledby="headingTwoOutdoor" data-parent="#accordionOutdoor">
                    <div class="card-body">
                      Outdoor Game 2 description
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
