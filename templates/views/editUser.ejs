<!DOCTYPE html>
<html>
  <head>
    <title> Edit Users </title>
    <%- include('partials/heads_content') %>
  </head>
  <body>
    <div class="container">
      <div
        style="margin: 0 auto"
        class="col-12 col-md-6 col-lg-5 p-5 customborder"
      >
        <% if(typeof alert != 'undefined') { %> <% alert.forEach(function(error)
        { %>
        <div class="alert alert-dismissible alert-success">
          <button type="button" class="close" data-dismiss="alert">
            &times;
          </button>
          <strong> <%= error.msg %> </strong>
        </div>
        <% }) %> <% } %> <% if(typeof userData != 'undefined') { %>
        <form action="/admin/edituser/<%=userData.id%>" method="POST">
          <div class="form-group">
            <label for="username">Enter Name</label>
            <input
              type="text"
              class="form-control"
              name="name"
              id="username"
              value="<%=userData.name%>"
              placeholder="Name"
            />
          </div>
          <div class="form-group">
            <label for="email">Enter Email</label>
            <input
              type="email"
              class="form-control"
              name="email"
              id="email"
              value="<%=userData.email%>"
              placeholder="Email"
            />
          </div>

          <div class="form-group">
            <label for="password">Choose A Password</label>
            <input
              type="password"
              class="form-control"
              name="password"
              id="checkbox"
              autocomplete="off"
              placeholder="Password"
            />
          </div>

          <div class="form-group">
            <div class="custom-control custom-checkbox">
              <input
                type="checkbox"
                class="custom-control-input"
                name="isAdmin"
                id="customCheck1"
              />
              <label class="custom-control-label" for="customCheck1"
                >Admin Status</label
              >
            </div>
          </div>

          <div class="form-group">
            <input
              type="submit"
              class="btn btn-block btn-outline-primary"
              value="Register"
            />
          </div>
          <p>
            Already Registered ?
            <a class="card-link" href="/login">LOGIN Here</a>
          </p>
        </form>
      </div>
    </div>

    <script type="text/javascript">
      function AdminCheckFunction(flag) {
      	document.getElementById("customCheck1").checked = flag

      }

      AdminCheckFunction(<%=userData.isAdmin%>)
    </script>
    <%}%>

    <%- include('partials/footer') %>
  </body>
</html>
